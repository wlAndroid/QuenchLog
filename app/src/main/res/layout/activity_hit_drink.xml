<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        tools:context=".drink.HitDrinkActivity" >

    <ImageView
            android:src="@drawable/ic_hit_back"
            android:id="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="#FF000000"
            android:textSize="16sp"
            />

    <ImageView
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/select_cup"
            android:src="@drawable/ic_hit_cup_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <ImageView
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/select_cup"
            android:id="@+id/cup1"
            android:background="@drawable/bg_item_select_cup"
            android:padding="12dp"
            android:src="@drawable/ic_hit_cup_1"
            android:layout_width="70dp"
            app:layout_constraintEnd_toStartOf="@id/cup2"
            android:layout_height="70dp" />

    <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cup1"
            app:layout_constraintEnd_toEndOf="@id/cup1"
            app:layout_constraintStart_toStartOf="@id/cup1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water"
            android:textColor="#FF000000"
            android:textSize="12sp"
            />

    <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cup2"
            app:layout_constraintEnd_toEndOf="@id/cup2"
            app:layout_constraintStart_toStartOf="@id/cup2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spark"
            android:textColor="#FF000000"
            android:textSize="12sp"
            />

    <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cup3"
            app:layout_constraintEnd_toEndOf="@id/cup3"
            app:layout_constraintStart_toStartOf="@id/cup3"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:textColor="#FF000000"
            android:textSize="12sp"
            />

    <ImageView
            app:layout_constraintStart_toEndOf="@id/cup1"
            app:layout_constraintTop_toTopOf="@id/cup1"
            android:id="@+id/cup2"
            android:background="@drawable/bg_item_select_cup"
            app:layout_constraintEnd_toStartOf="@id/cup3"
            android:padding="12dp"
            android:src="@drawable/ic_hit_cup_2"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    <ImageView
            app:layout_constraintStart_toEndOf="@id/cup2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cup1"
            android:id="@+id/cup3"
            android:background="@drawable/bg_item_select_cup"
            android:padding="12dp"
            android:src="@drawable/ic_hit_cup_3"
            android:layout_width="70dp"
            android:layout_height="70dp" />


    <ImageView

            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cup1"
            android:id="@+id/cup4"
            android:background="@drawable/bg_item_select_cup"
            android:padding="12dp"
            android:src="@drawable/ic_hit_cup_4"
            android:layout_width="70dp"
            app:layout_constraintEnd_toStartOf="@id/cup5"
            android:layout_height="70dp" />

    <ImageView
            app:layout_constraintStart_toEndOf="@id/cup4"
            app:layout_constraintTop_toTopOf="@id/cup4"
            android:id="@+id/cup5"
            android:background="@drawable/bg_item_select_cup"
            app:layout_constraintEnd_toStartOf="@id/cup3"
            android:padding="12dp"
            android:src="@drawable/ic_hit_cup_5"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    <ImageView
            app:layout_constraintStart_toEndOf="@id/cup5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cup4"
            android:id="@+id/cup6"
            android:background="@drawable/bg_item_select_cup"
            android:padding="12dp"
            android:src="@drawable/ic_hit_cup_6"
            android:layout_width="70dp"
            android:layout_height="70dp" />


    <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cup4"
            app:layout_constraintEnd_toEndOf="@id/cup4"
            app:layout_constraintStart_toStartOf="@id/cup4"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk tea"
            android:textColor="#FF000000"
            android:textSize="12sp"
            />

    <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cup5"
            app:layout_constraintEnd_toEndOf="@id/cup5"
            app:layout_constraintStart_toStartOf="@id/cup5"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tea"
            android:textColor="#FF000000"
            android:textSize="12sp"
            />

    <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cup6"
            app:layout_constraintEnd_toEndOf="@id/cup6"
            app:layout_constraintStart_toStartOf="@id/cup6"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk"
            android:textColor="#FF000000"
            android:textSize="12sp"
            />

    <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintBottom_toTopOf="@id/save"
            app:layout_constraintTop_toBottomOf="@id/cup4"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_ruler"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/ruler2"
            android:id="@+id/ruler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <TextView
            android:id="@+id/ruler_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150ml"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/trans"
            android:textColor="#FF17A8A9"
            android:textSize="12sp"
            />

    <ImageView
            android:id="@+id/trans"
            android:paddingHorizontal="2dp"
            android:paddingTop="8dp"
            android:background="#C0F0F1"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintEnd_toEndOf="@id/ruler"
            app:layout_constraintStart_toStartOf="@id/ruler"
            android:src="@drawable/ic_hit_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <View
            android:backgroundTint="#17A8A9"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="@id/ruler"
            app:layout_constraintBottom_toBottomOf="@id/ruler"
            app:layout_constraintStart_toStartOf="@id/ruler"
            android:background="@drawable/bg_ruler_item"
            android:id="@+id/line"
            android:layout_width="8dp"
            android:layout_height="34dp" />

    <TextView
            app:layout_constraintTop_toBottomOf="@id/ruler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/btn_save"
            android:id="@+id/save"
            android:gravity="center"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            />

</androidx.constraintlayout.widget.ConstraintLayout >