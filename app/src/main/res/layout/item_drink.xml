<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools" >

    <LinearLayout
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_item_drink"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <ImageView
                android:id="@+id/drink_icon"
                android:layout_marginStart="8dp"
                android:layout_marginVertical="12dp"
                android:src="@drawable/ic_hit_cup_1"
                android:layout_width="42dp"
                android:layout_height="42dp" />

        <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/drink_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textStyle="bold"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    />

            <TextView
                    android:id="@+id/drink_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2024-09-26 14:52"
                    android:textColor="#FFA9A9A9"
                    android:textSize="12sp"
                    />
        </LinearLayout >

        <TextView
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400ml"
                android:id="@+id/drink"
                android:textColor="#FF094F4E"
                android:textSize="20sp"
                />
    </LinearLayout >

    <ImageView
            android:layout_gravity="center"
            android:padding="4dp"
            android:id="@+id/drink_delete"
            android:src="@drawable/ic_hit_delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
</LinearLayout >